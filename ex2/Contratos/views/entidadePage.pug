extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Entidade Comunicante #{entidade.nipc}
    
        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
            li 
                b NIPC da Entidade Comunicante: 
                span= entidade.nipc
            li 
                b Entidade Comunicante: 
                span= entidade.nome                
            .w3-container
            table.w3-table-all
                tr
                    th Id Contrato
                    th Objeto do Contrato
                    th Data de Celebração do Contrato
                    th Preço Contratual
                    th NIPC da Entidade Comunicante 
                    th Entidade Comunicante
                if entidade && entidade.contratos && entidade.contratos.length > 0
                    each contrato in entidade.contratos
                            tr
                                td
                                    a(href="/" + contrato.id)= contrato.id
                                td= contrato.objetoContrato
                                td= contrato.dataCelebracaoContrato
                                td= contrato.precoContratual
                                td= contrato.NIPC_entidade_comunicante
                                td= contrato.entidade_comunicante
        footer.w3-container.w3-teal
            adress
                span Gerado por Guilherme Oliveira em #{date} - [
                a(href="/") Voltar
                span ]