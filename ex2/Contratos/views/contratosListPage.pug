extends layout

block content
     .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Lista de Contratos
                
                    
        .w3-container
            table.w3-table-all
                tr
                    th Id Contrato
                    th Objeto do Contrato
                    th Data de Celebração do Contrato
                    th Preço Contratual
                    th NIPC da Entidade Comunicante 
                    th Entidade Comunicante
                each contrato in lContratos
                    tr
                        td
                            a(href="/" + contrato.id)= contrato.id
                        td= contrato.objetoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td
                            a(href="/entidades/"+ contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante 
                        td= contrato.entidade_comunicante

        footer.w3-container.w3-blue 
            h5 Gerado por Guilherme Oliveira em #{date}